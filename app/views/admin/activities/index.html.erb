<div class="container">
<h2> The users </h2>

<%= link_to 'New activity', new_admin_activity_path %>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">City</th>
      <th scope="col">Details</th>
      <th scope="col">Edit</th>
      <th scope="col">Destroy</th>
    </tr>
  </thead>
  <tbody>
		<% i = 1	 %>
		<% for activity in @activities  %>
			<tr>
				<th scope="row"><%= i%></th>
				<td><%= activity.name %> </td>
				<td><%= activity.price %></td>
				<td><%= activity.city.name %> </td>
				<td><%= link_to "Show", city_activity_path(activity.city.id, activity.id) %> </td>
				<td><%= link_to "Edit", edit_admin_activity_path(activity.id) %> </td>
				<td><%= link_to "Destroy", admin_activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' }%> </td>
			</tr>
			<% i +=1 %>
		<% end %>
  </tbody>
</table>
</div>