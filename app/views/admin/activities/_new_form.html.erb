<div class="container">
	<%= form_with scope: :activity, url: admin_activities_path, local: true, method: :post  do |form| %>
	<% if activity.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

		<ul>
			<% activity.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

<div class="bg-form">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<%= form_with scope: :activity, url: admin_activities_path, local: true, method: :post  do |form| %>
						<% if activity.errors.any? %>
						<div id="error_explanation">
							<h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being
								saved:</h2>

							<ul>
								<% activity.errors.full_messages.each do |message| %>
								<li><%= message %></li>
								<% end %>
							</ul>
						</div>
						<% end %>

						<div class="form-group floating-label-form-group controls mb-0 pb-2">
							<%= form.label :name,class:"font-weight-bold"  %>
							<%= form.text_field :name,class:'form-control'  %>
						</div>

						<div class="form-group floating-label-form-group controls mb-0 pb-2">
							<%= form.label :address,class:"font-weight-bold" %>
							<%= form.text_field :address,class:'form-control' %>
						</div>

						<div class="form-group floating-label-form-group controls mb-0 pb-2">
							<%= form.label :price,class:"font-weight-bold" %>
							<%= form.text_field :price,class:'form-control' %>
						</div>

						<div class="form-group floating-label-form-group controls mb-0 pb-2">
							<%= form.label :description,class:"font-weight-bold" %>
							<%= form.text_area :description,class:'form-control' %>
						</div>


						<div class="form-group floating-label-form-group controls mb-0 pb-2">
							<%= form.collection_select(:city_id, cities.all, :id, :name) %>
						</div>

						<div class="form-group floating-label-form-group controls mb-0 pb-2">
							<%= form.collection_select(:activities_category_id, activities_categories.all, :id, :name) %>
						</div>

						<br>
						<div class="actions">
							<%= form.submit "Create activity", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
