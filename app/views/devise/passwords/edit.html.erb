
<div class="bg-form">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<h1 class="page-section-heading text-center text-primary mb-4 font-weight-bold">New Password</h1>
<%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
<%= render "shared/form_notification" %>

<div class="form-group font-weight-bold">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class: "form-control" %>
  </div>
  <div class="form-group font-weight-bold">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
  </div>

  <div class="form-group font-weight-bold mt-5 mb-4">
    <%= f.submit "Change my password",class:"btn btn-lg btn-primary btn-block text-uppercase" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</div>