
<div class="bg-form">
	<div class="container ">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup " } do |f| %>
						<h2 class="text-center text-primary mb-0 font-weight-bold">Edit
							<%= resource_name.to_s.humanize %></h2>
							<%= render "shared/form_notification" %>

						<div class="font-weight-bold">
							<%= f.label :email %><br />
							<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
						</div>

						<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
						<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
						<% end %>

						<div class="font-weight-bold">
							<%= f.label :password %> <em>(<%= @minimum_password_length %> characters minimum)</em><br />
							<%= f.password_field :password, autocomplete: "new-password", placeholder:"Password" %>
							<% if @minimum_password_length %>
							<br />

							<% end %>
						</div>

						<div class="font-weight-bold">
							<%= f.label :password_confirmation %><br />
							<%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"New Password" %>
						</div>

						<div class="font-weight-bold">
							<%= f.label :current_password %>
							<br>
							<%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Current Password" %>
						</div>

						<br>
						<div class="actions">
							<%= f.submit "Update", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
						</div>
						<% end %>


						<p>Unhappy?
							<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-lg btn-primary btn-block text-uppercase"%>
						</p>

						<%= link_to "Back", :back,class:"back_profil " %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>