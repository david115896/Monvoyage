<div class="container">
  <h2> The selection </h2>
  <table class="table">
    <thead>
      <tr>
        <th>Activity Name</th>
        <th>Duration</th>
        <th>Price</th>
        <th>Website</th>
				<th>Details</th>
      </tr>
    </thead>
    <tbody>
			<% for ticket in @tickets do %>
				<tr>
					<td> <%= ticket.activity.name %></td>
					<td> <%= ticket.duration %></td>
					<td> <%= ticket.price %></td>
					<td> <%= ticket.ticket_url %></td>
					<td> <%= link_to "show", city_activity_path(ticket.activity.city_id, ticket.activity.id) %> </td>
				<tr>
			<% end %>
    </tbody>
  </table>

	<% if user_signed_in? %>
		<%= link_to "Go to organiser", edit_organiser_path(cookies[:organiser_id]), class: "btn btn-lg btn-outline-primary p-2 m-2" %>
	<% else %>
		<%= link_to "Go to organiser", new_organiser_path, class: "btn btn-lg btn-outline-primary p-2 m-2" %>
	<% end %>
		
</div>
