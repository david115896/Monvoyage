<div class="container">

	<h1 class="display-4">Show your Profil</h1>

	<ul>
		<li> your First name is : <%=@user.first_name %></li>
		<li>your Last name is : <%=@user.last_name %> </li>
		<li>your email is : <%=@user.email %></li>
		<li>your Adresse is : <%=@user.address %></li>
	</ul>

	</ul>
		<% i = 0 %>
		<% for organiser in @organisers do %>
			<li><%=  link_to 'panel' + i.to_s, edit_organiser_path(organiser.id, commit: "change")	 %></li>
			<% i +=1 %>
		<% end %>
	</ul>

	<%= link_to "Change your informations",  edit_user_path(current_user.id), class: "btn btn-primary btn-lg", role: "button" %>
	<%= link_to "Create organiser",  organisers_path, class: "btn btn-primary btn-lg", role: "button", method: :post %>

</div>


<div class="container">
	<ul class = "list-group">
		<% if @orders then  %>
			<% i = 0 %>
			<%@orders.each  do |order| %>
				<li class="list-group-item"><%= link_to "order " + i.to_s, order_path(order.id)%></li>
				<% i += 1 %>
			<%end %>
		<% end %>
	</ul>
</div>
