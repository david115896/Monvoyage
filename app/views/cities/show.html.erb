
<div class="jumbotron background_checkerboard" style="margin-top:0px ">
  <h1 class="text-center">Editing City</h1>

  <div class="container">
    <div class="row">
      <div class="Bck_card3" style="background-image: url(<%= @city.picture%>)">
        <div class="card img_card_jump">

          <div class="card text-center" >
            <div class="card-img-top ">
              <%= image_tag 'park.png'%>
            </div>
            <h5 class="card-title"><%= @city.name%></h5>

            <hr class="lign">
            <hr class="lign">

            <p class="card-text">Description: <%=@city.description%></p>
            <p class="card-text">Address: <%=@city.address %></p>
            <p class="card-text">Climat: <%=@city.climat%></p>
            <p class="card-text">Timezone: <%=@city.timezone %></p>
            <p class="card-text">Traditions: <%=@city.traditions%></p>
            <p class="card-text">Flag: <%=@city.flag%></p>
            <p class="card-text">Emblems: <%=@city.emblems%></p>


            <div class="actions">
              <%= button_to 'Edit the city', edit_city_path(@city.id), method: :get, class:"btn btn-lg btn-primary btn-block text-uppercase"  %>
            </div>
            <%= button_to 'Back', cities_path, method: :get, class:"btn btn-lg btn-primary btn-block text-uppercase" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>