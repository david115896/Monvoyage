<div class="row align-items-center justify-content-center ">
 <div class="col ">
  <p id="notice"><%= notice %></p>
  <div class="title_cart text-right"> 
    <h2> My cart <i class="fas fa-cart-arrow-down fa-x5"></i></h2>
  </div>
  <div class="tabl-cart">
    <table class="table ">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Title</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_activities.each do |activity| %>
        <tr>
          <td><%= image_tag activity.picture, class:"img-50" %></td>
          <td><%= activity.name %></td>
          <td><%= 1%></td>
          <td><%= activity.price  %> $</td>
          
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <% if @amount == 0 %>
    <%= link_to 'No articles in your cart, click here to go back to home', city_path("55"), class:"mt-5"%>
    <% else %>
        <%= form_tag charges_path do %>
        <article>
          <% if flash[:error].present? %>
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
          <label class="amount">
            <span>Amount: <%= @amount %>$</span>
          </label>
        </article>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



