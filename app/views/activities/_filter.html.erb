<div class="row">
	<div class="col-8 d-inline-flex">
		<%= form_with scope: :city, url: city_activities_path(params[:city_id]), local: true, method: :get  do |form| %>
			<div class="d-flex form-group ml-4 mr-4  ">
				<div >
				<h5 class="mr-3">Select a theme to filter : </h5>
				<%= form.collection_select(:activities_category_id, activities_categories.all, :id, :name, {}, {class: "form-control"}) %>
				</div>
				<%= form.submit "Search", class:"btn btn-lg btn-outline-primary p-2 m-2" %>
			</div>
			
		<% end %>

		<% if user_signed_in? && @show_my_activities == false %>
			<%= button_to "Show my activities", city_activities_path(current_city_id), method: :get,  params: { commit: "my_activities" }, class:"btn btn-lg btn-outline-primary p-2 m-2" %>
		<% elsif user_signed_in? && @show_my_activities == true %>
			<%= button_to "Show all activities", city_activities_path(current_city_id), method: :get,  params: { commit: "all_activities" }, class:"btn btn-lg btn-outline-primary p-2 m-2" %>
		<% end %>
	</div>
	<div class="col-4">
	<% if user_signed_in? %>
		<%= button_to 'Start my planning', edit_organiser_path(cookies[:organiser_id]), method: :get, class:"btn btn-lg btn-outline-primary p-2 m-2"  %>
	<% else %>
		<%= button_to 'Start my planning', new_organiser_path, method: :get, class:"btn btn-lg btn-outline-primary p-2 m-2"  %>
	<% end %>
	</div>
</div>

