<div class="container-fluid showActivity">
    <div class="row">
        <div class="card m-5">

            <div class="card-body cardShowActivity">


                <h1 class="card-title nameshowActivity"><%=@activity.name%></h1>
                <h6 class="card-subtitle text-muted"></h6>
                <div class='media'>
                    <%= image_tag @activity.picture,class:'align-self-end mr-2 imageShowActivity', alt:"Card image" %>
                    <div class='media-body'>
                        <p id="notice"><%= notice %></p>
                        <%=@activity.description%>
                        <%= button_to 'Add to Cart', carts_path(:activity_id => @activity.id), method: :post, class: "btn btn-primary buttonShowActivity"%>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>
</div>