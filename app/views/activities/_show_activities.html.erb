<div class="jumbotron background_checkerboard">
        <div class="row">
            <div class="col-lg-6 pictureShowActivity">
                <%= image_tag @activity.picture,class:'img-responsive', alt:"Card image" %>
            </div>
            <div class="col-lg-6">
                <div class="card m-5">


                    <div class="card-body card-bodyz text-center">
                        <h1 class="card-title nameshowActivity"><%=@activity.name%></h1>
                        <h6 class="card-subtitle text-muted"></h6>
                        <div class='media-body'>
                            <p id="notice"><%= notice %></p>
                            <%=@activity.description%>
                            <%= button_to 'Add to Cart', carts_path(:activity_id => @activity.id), method: :post, class: "btn btn-primary buttonShowActivity"%>
                        </div>
                     </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




