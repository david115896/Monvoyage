<% for activity in activities do %>
    <div class="card card-activity m-1" style="background-image: url(<%= activity.picture%>)">
        <div class="d-flex justify-content-end mr-3 mt-3" id="heart<%=activity.id%>">
        <% if @cart_activities.include?(activity) %>
            <%= link_to checkout_path(checkout_to_destroy(activity)), method: :delete , class: 'text-white', remote: true do %><i class="fas fa-heart fa-2x"></i><%end%>
        <% else%>
            <%= link_to checkouts_path(:activity_id => activity.id, :city_id => params[:city_id]), method: :post , id: "idcart",class: 'text-white', remote: true do %><i class="far fa-heart fa-2x"></i><%end%>
        <%end%>
        </div>
        <div class="d-flex align-items-center card-body justify-content-center">
            <div class="text-white text-center">
                <h5 class="card-title mb-4"><%= activity.name%></h5>
                <%= link_to city_activity_path(params[:city_id], activity.id), class: 'text-white', remote: true do %><i class="fas fa-info-circle fa-2x"></i><%end%>
            </div>
        </div>
    </div> 
<% end %>