<div class="border p-2 text-center"> <!-- Div Filter -->
  <% if current_city.id == session[:city].id %>
  	<%= render 'filter', activities_categories: @activities_categories %>
  <%else%>
    <%= button_to 'To select activities of ' + session[:city].name, cities_path(commit: "new_travel"), method: :get, class:"btn btn-outline-primary" %>
  <% end%>
</div>
<div class="row ml-3">
  <div class="col-7">
    <div class="row justify-content-between align-items-center" id="cards"> <!-- Div Cards Activities -->
      <%= render 'cards_activities', activities: @activities %>
    </div> 
  </div>
  <div class="col-5 float-right"> <!-- Div Map -->
    <div class="sticky_div">
      	<%= render 'map_activities' %>
    </div>
    <script src="<%="https://maps.googleapis.com/maps/api/js?key=#{ENV['MAP_KEY']}&callback=initMapActivities"%>"></script>
  </div>
</div>
<div id='activity-content'></div> <!--Popup Show Activity -->

