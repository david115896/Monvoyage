<div id="activity-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
        <% if @activity != nil %>
          <div class="row justify-content-between align-items-center">
            <div class="container m-1 show-activity" style="background-image: url(<%= @activity.picture%>) ">
              <div class="card m-5 text-center">
                <div class="card-body card-bodyz text-center mb-5">
                  <h1 class="card-title"><%=@activity.name%></h1>
                  <p> <%=@activity.description%> </p>
                </div>
								<% if current_city.id == params[:city_id].to_i %>
									<% if @cart_activities.include?(activity) %>
										<% if user_signed_in? %>
											<%= button_to "Remove of my list of activities", checkout_path(checkout_to_destroy(activity)), method: :delete, remote: true, class: ' btn btn-outline-primary mb-5' %>
										<% else %>
											<%= button_to "Remove of my list of activities", checkout_path(checkout_to_destroy_session(activity)), method: :delete, remote: true, class: ' btn btn-outline-primary mb-5' %>
										<% end %>
									<% else%>
										<%= button_to "Add to my list of activities", checkouts_path(:activity_id => activity.id, :city_id => params[:city_id]), method: :post, remote: true, class: ' btn btn-primary mb-5' %>
									<%end%>
                <%end%>
              </div>
            </div>
          </div>
        <% end%>
      </div>
    </div>
  </div>
</div>


