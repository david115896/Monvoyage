<div class="full_page">
  <div class="container new_country">
      <div class="container">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
              <div class="card-body">
                <h2 class="page-section-heading text-center text-primary mb-0 font-weight-bold">
                  Create country
                </h2>
                <%= form_with(model: country, local: true) do |form| %>
                <% if country.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

                  <ul>
                    <% country.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>

                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <%= form.label :name, class:"font-weight-bold" %>
                  <%= form.text_field :name, class:'form-control' %>
                </div>

                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <%= form.label :position, class:"font-weight-bold" %>
                  <%= form.text_field :position, class:'form-control' %>
                </div>

                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <%= form.label :flag,class: 'font-weigth-bold'  %>
                  <%= form.text_field :flag, class: 'form-control' %>
                </div>

                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <%= form.label :currency, class: 'font-weigth-bold' %>
                <%= form.text_field :currency, class: 'form-control' %>
              </div>

              <div class="form-group floating-label-form-group controls mb-0 pb-2">
              <%= form.submit "Create", class:"btn btn-lg btn-primary btn-block text-uppercase"%>
              <% end %>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
